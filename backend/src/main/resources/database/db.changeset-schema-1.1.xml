<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">


	<!-- Include previous version  -->
	<include file="db.changeset-schema-1.0.xml" relativeToChangelogFile="true"/> 
    



	<!-- Make changes to schema -->
    <changeSet author="fleppsim" id="schema-1.1.0">
        <dropForeignKeyConstraint baseTableName="historyItem" constraintName="fk_historyItems_request"/>
        <dropTable cascadeConstraints="true"
            tableName="request"/>
        <createTable tableName="request">
            <column autoIncrement="true" name="request_id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="command" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="request" baseTableName="historyItem" constraintName="fk_historyItems_request" deferrable="false" initiallyDeferred="false" referencedColumnNames="request_id" referencedTableName="request"/>
    </changeSet>

    <changeSet author="fleppsim" id="schema-1.1.1">
		<dropForeignKeyConstraint baseTableName="historyItem" constraintName="fk_historyItems_response"/>
        <dropTable cascadeConstraints="true"
            tableName="response"/>

   
        <createTable tableName="response">
            <column autoIncrement="true" name="response_id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="responsetext" type="VARCHAR(500)"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="response" baseTableName="historyItem" constraintName="fk_historyItems_response" deferrable="false" initiallyDeferred="false" referencedColumnNames="response_id" referencedTableName="response"/>
    </changeSet>

</databaseChangeLog>